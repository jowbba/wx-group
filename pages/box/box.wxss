/* pages/box/box.wxss */
Page {
  width: 100%;
  height: 100%;
  background-color: black;
}

.page-frame {
  width: 100%;
  height: 100%;
  background-color: black;
}

#box-cover {
  height: 170px;
  border-bottom: 1px solid white; 
}

#box-list {
  width: 100%;
  display: block;
  padding: 0 1vw;
}

#box-list image {
  width: 32vw;
  height: 32vw;
}

#box-list image:nth-child(3n-1) {
  margin:0 1vw;
}