/* pages/box/box.wxss */
Page {
  width: 100%;
  height: 100%;
  background-color: black;
}

.page-frame {
  width: 100%;
  height: 100%;
  background-color: black;
}

#box-cover {
  height: 170px;
  border-bottom: 1px solid white; 
}

#box-list {
  width: 100%;
  display: block;
  padding: 0 1vw;
}

#box-list .image-container {
  width: 32vw;
  height: 32vw;
  display: inline-block;
  position: relative;
}

#box-list .image-container:nth-child(3n-1) {
  margin:0 1vw;
}

#box-list image {
  width: 100%;
  height: 100%;
}

#box-list .image-select-pointer {
  position: absolute;
  width: 15px;
  height: 15px;
  top: 10px;
  left: 10px;
  border-radius: 50%;
  border: 1px solid #999;
}