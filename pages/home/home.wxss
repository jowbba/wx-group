/* home.wxss */

Page {
  height: 100%;
}

.home-container {
  height: 100%;
}

.create-grout-icon {
  width: 56px;
  height: 56px;
  position: absolute;
  bottom: 20px;
  right: 20px;
  border-radius: 50%;
  box-shadow: 0 0 5px #666;
}

.create-grout-icon image {
    width: 56px;
  height: 56px;
}

.create-group-container {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
  position: absolute;
  top: 0px;
  transition: all 0.3s ease-in-out;
}

.create-group-form {
  background: white;
  padding: 10px 20px;
  position: absolute;
  top: 50%;
  left: 5%;
  margin-top: -53px;
  width: 90%;
  box-sizing: border-box;
}

.create-group-input {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  height: 30px;
  margin-bottom: 10px;
}

.create-group-input>label, .create-group-input>input {
  height: 30px;
  line-height: 30px;
  margin-right: 10px;
}

.create-group-button {
  max-width: 250px;
  margin: 0 auto;
}

/*group */

#group-list-container {
  margin-top: 5px;
}

.group {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content:space-between;
  align-items: center;
  height: 72px;
  box-sizing: border-box;
}

.group-screenshot {
  width: 40px;
  height: 40px;
  margin-left: 16px;
  display: flex;
  flex-flow:row wrap;
}

.group-screenshot image{
  width:40%;
  height:40%;
  margin:5%;
}

.group-description {
  margin-left: 10px;
  flex-grow: 1;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  border-bottom: 1px solid #e5e5e5;
  box-sizing: border-box;
}

.group-name, .group-detail {
  height:22px;
  line-height: 22px;
}

.group-name text {
  font-size: 16px;
  color: #353535;
  font-weight: 600;
}

.group-detail text {
  font-size: 14px;
  color: #888;
}

.group-updateTime {
  width: 100px;
  height: 72px;
  line-height: 72px;
  box-sizing: border-box;
  flex-basis: 100px;
  text-align: right;
  padding-right:16px;
  border-bottom: 1px solid #e5e5e5;
}

.group-updateTime text {
  display: block;
  height: 72px;
  font-size: 12px;
  color:#b2b2b2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
