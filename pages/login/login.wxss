/* pages/login/login.wxss */
page {
  height: 100%;
}
.login-container {
  background-color: #202123;
  height:100%;
  padding-top:80px;
  box-sizing: border-box;
}

.login-input, .login-button, .wxlogin-button {
  max-width: 80%;
  height:40px;
  line-height: 40px;
  border-radius: 24px;
  background: #fff;
  margin: 0 auto;
  size:11px;
  margin-bottom: 30px;
  padding-left:10px;
  box-sizing: border-box;
  border: 1px solid transparent;
}

.input-placeholder {
  size:11px;
  color:#1E1E1E;
  opacity: .54;
}

.login-button {
  background-color: rgba(0, 0, 0, .7);
  color:#fff;
  margin-top:50px;
}

.wxlogin-button {
  background-color: #58bb20;
  color:#fff;
}

.login-register-slice {
  width:156px;
  height:11px;
  margin:0 auto;
  display: block;
  margin-bottom: 25px;
}
